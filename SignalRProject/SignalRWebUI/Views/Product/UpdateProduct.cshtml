@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<input type="hidden" asp-for="ProductId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" id="productname" asp-for="ProductName">
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<label for="price">Ürünün Fiyatını Giriniz</label>
								<input type="text" class="form-control" id="price" asp-for="Price">
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<div class="d-flex">
									<div class="row">
										<div class="col-md-4">
											<img src="@Model.ImageUrl" class="img-thumbnail" />
										</div>
										<div class="col-md-8"></div>
									</div>
								</div>
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<label for="categoryid">Ürün Kategorisi Giriniz</label>
								@Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.v, new { @class = "form-control"})
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<label for="description">Ürün Açıklaması Giriniz</label>
								<input type="text" class="form-control" id="description" asp-for="Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


