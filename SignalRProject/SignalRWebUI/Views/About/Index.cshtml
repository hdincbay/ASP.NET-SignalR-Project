@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "../AdminLayout/Index";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda Tablosu</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var ab in Model)
								{
									<tr>
										<td>@ab.AboutId</td>
										<td>@ab.Title</td>
										<td>@ab.Description</td>
										<td><a class="btn btn-outline-danger" href="About/DeleteAbout/@ab.AboutId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="About/UpdateAbout/@ab.AboutId">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkımızda Yazısı Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>
