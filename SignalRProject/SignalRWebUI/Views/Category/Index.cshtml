@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "../AdminLayout/Index";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori Tablosu</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori İsmi</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var ct in Model)
								{
									<tr>
										<td>@ct.CategoryId</td>
										<td>@ct.CategoryName</td>
										<td>@ct.CategoryStatus</td>
										<td><a class="btn btn-outline-danger" href="Category/DeleteCategory/@ct.CategoryId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="Category/UpdateCategory/@ct.CategoryId">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="Category/CreateCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>
