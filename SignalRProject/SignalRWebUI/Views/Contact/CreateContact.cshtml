@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" id="location" asp-for="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" id="phone" asp-for="Phone">
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<label for="mail">Mail Adresi Giriniz</label>
								<input type="email" class="form-control" id="mail" asp-for="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgi Yazısını Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
