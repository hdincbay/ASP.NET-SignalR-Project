@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var ct in Model)
								{
									<tr>
										<td>@ct.ContactId</td>
										<td>@ct.Location</td>
										<td>@ct.Phone</td>
										<td>@ct.Mail</td>
										<td>@ct.FooterDescription</td>
										<td><a class="btn btn-outline-danger" href="Contact/DeleteContact/@ct.ContactId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="Contact/UpdateContact/@ct.ContactId">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Bilgisi Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>
