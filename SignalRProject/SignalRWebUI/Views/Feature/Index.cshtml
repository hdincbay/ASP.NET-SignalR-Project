@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfada Öne Çıkan Alan İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var ft in Model)
								{
									<tr>
										<td>@ft.FeatureId</td>
										<td>@ft.Title1</td>
										<td>@ft.Title2</td>
										<td>@ft.Title3</td>
										<td>@ft.Description1</td>
										<td>@ft.Description2</td>
										<td>@ft.Description3</td>
										<td><a class="btn btn-outline-danger" href="Feature/DeleteFeature/@ft.FeatureId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="Feature/UpdateFeature/@ft.FeatureId">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="Feature/CreateFeature" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>

