@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
int count = 0;
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon Tablosu</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Rezervasyon Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Rezervasyon İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var bo in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@bo.Name</td>
										<td>@bo.Phone</td>
										<td>@bo.PersonCount</td>
										<td>Rezervasyon Alındı</td>
										<td><a class="btn btn-outline-danger" href="Booking/DeleteBooking/@bo.BookingId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="Booking/UpdateBooking/@bo.BookingId">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="Booking/CreateBooking" class="btn btn-outline-primary">Yeni Rezervasyon Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>

